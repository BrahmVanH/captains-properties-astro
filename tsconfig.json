{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@lib/*": ["src/lib/*"],
			"@components/*": ["src/components/*"],
			"@styles/*": ["src/styles/*"],
			"@layouts/*": ["src/layouts/*"],
			"@images/*": ["src/img/*"],
			"@svgs/*": ["src/img/svg/*"],
			"@types": ["src/types.d.ts"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"allowJs": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx", "src/**/*.astro"],
	"exclude": ["node_modules"]
}
